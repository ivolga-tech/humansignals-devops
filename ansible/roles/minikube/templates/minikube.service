[Unit]
Description=minikube
After=network-online.target containerd.service docker.service
Wants=network-online.target docker.service
Requires=docker.socket containerd.service docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/minikube start --driver none --container-runtime cri-o --cni calico --kubernetes-version v1.25.6 --addons ingress
ExecStop=/usr/local/bin/minikube stop
User={{ ansible_user }}
Group={{ ansible_user }}

[Install]
WantedBy=multi-user.target
